<view>
  <view class="page-title">Shop Detail</view>
  <view class="user-content">
    <view class="avatar">
      <image mode="widthFix" src="{{currentUser.avatar}}">
    </view>
    <view class="name">
      {{currentUser.name}}
    </view>
    <view class="position">
      <text class="position-item" a:for="{{currentUser.position}}">{{item}}</text>
    </view>
    <view class="description">
      {{currentUser.description}}
    </view>
  </view>
</view>
