{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es5",
    "types": ["mini-types"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "locale": "zh-CN",
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./es",
    "declaration": true,
    "declarationDir": "./types",
    "help": true,
  },
  "include": ["src"],
}
