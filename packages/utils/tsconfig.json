{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es6",
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "locale": "zh-CN",
    "forceConsistentCasingInFileNames": true,
    "module": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./lib",
    "declaration": true,
    "declarationDir": "./types",
    "help": true
  },
  "include": ["src/**/*"]
}
